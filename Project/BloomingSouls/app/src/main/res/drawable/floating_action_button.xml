<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:endColor="#3F51B5"
                android:startColor="#09c6df" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:left="10dp"
        android:right="10dp">
        <rotate android:fromDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#ffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>